<div style="font-size: 80%; position: absolute; margin: .5em 4em; z-index: 10">
View: 
<%= content_tag(:select, :class => 'replace-data') do %>
  <option data-top="">All</option>
  <option data-top="20">Top 20</option>
<% end %>

By: 
<%= 
  content_tag(:select, :class => 'replace-data') do
    ['score','normalized_score','deviation_from_median','deviation_from_mean'].collect do |by|
      data = { :top => params[:top], :by => by, :label => by.humanize }.reject { |k,v| v.nil? }
      content_tag(:option, by.humanize, :data => data)
    end.join('').html_safe
  end
%>
</div>