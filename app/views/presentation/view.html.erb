<script type="text/javascript">
  var chart;
  $(document).ready(function() {
    chart = new Highcharts.Chart({
      chart: {
        renderTo: 'container',
        defaultSeriesType: 'spline',
        zoomType: 'xy',
        spacingRight: 20
      },
      title: {
        text: 'code4lib 2012 Presentation Voting'
      },
      subtitle: {
        text: 'Drag to zoom'
      },
      xAxis: {
        type: 'datetime',
        maxZoom: 24 * 3600000, // one day
        title: {
          text: null
        }
      },
      yAxis: {
        title: {
          text: 'Votes'
        },
        min: 0,
        maxZoom: 20,
        startOnTick: true,
        showFirstLabel: true
      },
      plotOptions: {
        spline: {
          lineWidth: 2,
          states: {
            hover: {
              lineWidth: 5
            }
          },
          marker: {
            enabled: false,
            states: {
              hover: {
                enabled: true,
                symbol: 'circle',
                radius: 5,
                lineWidth: 1
              }
            }   
          }
        }
      },
      legend: { 
        enabled: false,
        floating: true
      },
      series: <%= raw(@presentations.collect { |p| p.series }.to_json) %>
    });
  });
</script>

<div id="container" class="highcharts-container" style="height:768px; margin: 0 2em; clear:both; min-width: 600px">
</div>
